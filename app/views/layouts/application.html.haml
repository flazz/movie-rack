!!!5
%html
%head
  %title MovieRack
  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  = csrf_meta_tag

%body

  - if flash[:notice]
    .notice= flash.notice
  - if flash[:alert]
    .notice.alert= flash.alert

  = yield

- unless controller.controller_name == 'showtimes' and controller.action_name == 'index'
  %hr
  = link_to 'back to showtimes', root_path
